<!-- DISPLAY DU FORMULAIRE -->
<% content_for :title, "Edit a Gossip" %>
<!-- Affichage StylisÃ© du Gossip-->
<% if !@gossip.nil? && @gossip.errors.any? %>
	<div class="alert alert-danger">
	  <p>We were not able to add your gossip for the following reasons :</p>
	  <ul>
	    <% @gossip.errors.full_messages.each do |message| %>
	      <li><%= message %></li>
	    <% end %>
	  </ul>
	</div>
<% end %>
<div class ='align-middle'>
	<div class="card mt-5 ml-5 mr-5" style="height:350px">
		<h5 class="card-title ml-5 pt-5 mb-2">Edit your Gossip</h5>
	  <div class="card-body">
		<%= form_for @gossip do |f| %>
	<div class=" form-group">
	<label class="card-title">Title </label>
	<%=f.text_field :title, class: 'form-control' %>
	<label class="card-title">Content </label>
	<%=f.text_area :content, class: 'form-control' %>
	</div>
	<div class="form-group">
	    <button type="submit">Modifier l'article </button>
	</div>
<% end %>