<!-- DISPLAY DU FORMULAIRE DE CREATION DE COMMENTAIRE -->
<% content_for :title, "Add a Comment" %>
<!-- Affichage StylisÃ© du Gossip-->
<% if !@comment.nil? && @comment.errors.any? %>
	<div class="alert alert-danger">
	  <p>We were not able to add your comment for the following reasons :</p>
	  <ul>
	    <% @comment.errors.full_messages.each do |message| %>
	      <li><%= message %></li>
	    <% end %>
	  </ul>
	</div>
<% end %>



<div class ='align-middle text-center'>
	<div class="card m-5 p-5" style="height:300px">
		<div class="card-body">		
			<%= form_tag gossip_comments_path do %>
			  <h5 class="cart-title"><%= label_tag 'Comment' %></h5>
			  <p class="cart-title"><%= text_area_tag 'content', @comment.content %></p>
			  <br /> <br />
			  <%= submit_tag "Add Comment", class: 'btn btn-danger' %>
			<% end %>
		</div>
	</div>
</div>
